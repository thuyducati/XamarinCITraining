<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <!--spec styles-->
    <Style
        TargetType="Button"
        x:Key="HightButtonStyle">
        <Setter
            Property="BackgroundColor"
            Value="{StaticResource HightlightColorPrimary}" />
    </Style>
    <Style
        TargetType="Button"
        x:Key="ImageOnlyButtonStyle">
        <Setter
            Property="BackgroundColor"
            Value="Transparent">
        </Setter>
        <Setter
            Property="BorderWidth"
            Value="0">
        </Setter>
    </Style>
    <Style
        TargetType="Label"
        x:Key="HightLightTextStyle">
        <Setter
            Property="FontAttributes"
            Value="Bold">
        </Setter>
    </Style>
    <Style
        TargetType="Label"
        x:Key="ValidationMessageStyle">
        <Setter
            Property="TextColor"
            Value="{StaticResource HightlightColorPrimary}" />
        <Setter
            Property="FontAttributes"
            Value="Italic" />
        <Setter
            Property="FontSize"
            Value="Micro" />
    </Style>
</ResourceDictionary>